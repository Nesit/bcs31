<%= semantic_form_for [:admin, resource] do |f| %>
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :content %>
    <%= f.input :image %>

    <%= image_tag resource.image.thumb.url if resource.image.thumb.url.present? %>
  <% end %>

  <%= f.actions %>
<% end %>

