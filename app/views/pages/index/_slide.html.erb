<div class="da-slide">
  <%= link_to(banner.url) do %>
  <div class="da-slider_content_link">
    <div class="slider_paragraph_first slider_banner">
      <h2><i><%= raw banner.paragraph(0) %></i></h2>
    </div>

    <div class="slider_paragraph_second slider_banner">
      <h2><i><%= raw banner.paragraph(1) %></i></h2>
    </div>

    <div class="slider_paragraph_third slider_banner">
      <h2><i><%= raw banner.paragraph(2) %></i></h2>
    </div>
    <div class="da-img"><%= image_tag(banner.image.banner.url, alt: "", class: "slider_rocket") %></div>
  </div>
  <% end %>
</div>